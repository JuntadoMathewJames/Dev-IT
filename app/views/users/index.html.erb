<style>
  body, html{
      height:100%;
      background-color:#282A3A;
    
  }
  
</style>
<div id = "login_bg" style=" height:100%;background-position:center; background-repeat:no-repeat;background-size:cover; ">
  <section class="ftco-section">
    <div class="container">
      <div class="row justify-content-center  ">
        <div class="col-md-6 col-lg-4 d-flex  mt-5">
            <div class="login-wrap p-0">
              <h2 style = "text-align:center; color:white">The Scalable Point of Sales System</h2>
              <br>
              <%= form_with url:"/login/proceed", method: :post  do |form|%>
                <div class="form-group">
                  <%= form.text_field :username, class:"form-control ", placeholder: "Username"%>
                </div>
                <br>
                <div class="form-group">
                  <%= form.password_field :password, class: "form-control", placeholder: "Password"%>
                </div>
                <br>
                <div id = "login_errorArea"></div>
                <div class="form-group">
                  <%= form.submit "LOGIN", class:"form-control", style: "background-color:black; color:white"%>
                </div>
              <% end %>
              <br>
              <button type="button" id='btn-need-account' class="btn btn-link">Need Account?</button>
              <div id = "registration_area" tabindex="0">
                <%= render partial: "registration_form", locals: {user: @user, notice: ""}%>
              </div>
            </div>
        </div>
      </div>
    </div>
  </section>
</div>
