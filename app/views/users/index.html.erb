<style>
  body, html{
      height:100%;
  }
</style>
<div id = "login_bg" style=" height:100%;background-position:center; background-repeat:no-repeat;background-size:cover; ">
  <section class="ftco-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
          <div class="login-wrap p-0" style  = "margin-top:20%;">
            <h2 style = "text-align:center; font-family: 'Lucida Console';">The Scalable Point of Sales System</h2>
            <br>
            <%= form_with url:"/login/proceed", method: :post do |form|%>
              <h5>Already have an account?</h5>
              <div class="form-group">
                <%= form.text_field :username, class:"form-control", placeholder: "Enter Username"%>
              </div>
              <br>
              <div class="form-group">
                <%= form.password_field :password, class: "form-control", placeholder: "Enter Password"%>
              </div>
              <br>
              <div id = "login_errorArea"></div>
              <div class="form-group">
                <%= form.submit "LOGIN", class:"form-control", style: "background-color:black; color:white"%>
              </div>
            <% end %>
            <br>
            <h5 >Registration Form</h5>
            <%= form_with url:"/register/proceed", method: :post do |f|%>
              <div class="form-group">
                <label for = "username"><strong>Username:</strong></label>
                <%= f.text_field :register_username, class:"form-control", placeholder: "Enter Username"%>
              </div>
              <div class="form-group">
                <label for = "username"><strong>Password:</strong></label>
                <%= f.password_field :password_digest, class: "form-control", placeholder: "Enter Password"%>
              </div>
              <div class="form-group">
                <label for = "username"><strong>Confirm Password:</strong></label>
                <%= f.password_field :confirm_password, class: "form-control", placeholder: "Confirm Password"%>
              </div>
              <br>
              <div id = "register_errorArea"></div>
              <div class="form-group">
                <%= f.submit "REGISTER", class:"form-control", style: "background-color:green; color:white"%>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
