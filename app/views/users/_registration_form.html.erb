<h5 >Registration Form</h5>
<%= form_with url:"/register/proceed", method: :post, model: user do |f|%>
  <% invalid_username = user.errors.include?(:username) %>
  <div class="form-group">
    <label for = "username"><strong>Username:</strong></label>
    <%= f.text_field :register_username, class:"form-control #{'is-invalid' if invalid_username}", placeholder: "Enter Username"%>
    <% if invalid_username %>
      <div class="invalid-feedback d-block">
        <% user.errors.full_messages_for(:username).each do |error_message| %>
          <%= error_message %>.
        <% end %>
      </div>
    <% end %>
  </div>
  <% invalid_password = user.errors.include?(:password_digest) %>
  <div class="form-group">
    <label for = "username"><strong>Password:</strong></label>
    <%= f.password_field :password_digest, class: "form-control #{'is-invalid' if invalid_password}", placeholder: "Enter Password"%>
    <% if invalid_password %>
      <div class="invalid-feedback d-block">
        <% user.errors.full_messages_for(:password_digest).each do |error_message| %>
          <%= error_message %>.
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="form-group">
    <label for = "username"><strong>Confirm Password:</strong></label>
    <%= f.password_field :confirm_password, class: "form-control", placeholder: "Confirm Password"%>
  </div>
  <br>
  <p style = "color:red;"><%= notice %></p>
  <div class="form-group">
    <%= f.submit "REGISTER", class:"form-control", style: "background-color:green; color:white"%>
  </div>
<% end %>
